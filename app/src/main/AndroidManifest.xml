<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pru.slavedevice">
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".BaseApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SlaveDevice">
        <activity
            android:name=".PickActivity"
            android:exported="true"
            android:theme="@style/Theme.SlaveDevice.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SlaveActivity"

            android:theme="@style/Theme.SlaveDevice.NoActionBar" />
        <activity
            android:name=".MasterActivity"

            android:theme="@style/Theme.SlaveDevice.NoActionBar" />
        <activity
            android:name=".DiscoveryActivity"

            android:theme="@style/Theme.SlaveDevice.NoActionBar">

        </activity>

        <meta-data
            android:name="com.google.android.nearby.messages.API_KEY"
            android:value="AIzaSyCztjlEZYIKSvDy0bPdqfhH6PXTSz97FkM" />

        <activity
            android:name=".MainActivity"

            android:theme="@style/Theme.SlaveDevice.NoActionBar" />
    </application>

</manifest>